<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background" />

    <!-- Sensor Settings Section -->

    <TextView
        android:id="@+id/text_imu_hz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMU Frequency (Hz)"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/edit_text_imu_hz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/edit_text_imu_hz"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text="50"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="0dp"
        app:layout_constraintBottom_toBottomOf="@id/text_imu_hz"
        app:layout_constraintStart_toEndOf="@id/text_imu_hz"
        app:layout_constraintTop_toTopOf="@id/text_imu_hz" />

    <TextView
        android:id="@+id/text_location_hz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Frequency (Hz)"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/edit_text_location_hz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_imu_hz"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/edit_text_location_hz"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text="0.2"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginStart="0dp"
        app:layout_constraintBottom_toBottomOf="@id/text_location_hz"
        app:layout_constraintStart_toEndOf="@id/text_location_hz"
        app:layout_constraintTop_toTopOf="@id/text_location_hz" />

    <TextView
        android:id="@+id/text_imu_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration (Min)"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/edit_text_duration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_location_hz"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/edit_text_duration"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text="1"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginStart="0dp"
        app:layout_constraintBottom_toBottomOf="@id/text_imu_duration"
        app:layout_constraintStart_toEndOf="@id/text_imu_duration"
        app:layout_constraintTop_toTopOf="@id/text_imu_duration" />

</androidx.constraintlayout.widget.ConstraintLayout>
